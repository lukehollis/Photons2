{
    "name": "photons2",
    "repository": {
        "type": "git",
        "url": "https://github.com/mkkellogg/Photons2"
    },
    "version": "1.0.0",
    "description": "Three.js Particle System",
    "main": "index.js",
    "author": "Mark Kellogg",
    "type": "module",
    "scripts": {
        "build-server": "mkdir -p ./build/server && cp -r ./server ./build/ && cp ./node_modules/three/build/three.module.js ./build/server/assets/lib/three.module.js",
        "build-library": "npx rollup -c && mkdir -p ./build/server/assets/lib && cp ./build/photons* ./build/server/assets/lib/",
        "build": "npm run build-library && npm run build-server",
        "watch": "npx npm-watch ",
        "server": "npx http-server ./build/server",
        "fix-styling": "npx stylelint **/*.scss --fix",
        "fix-js": "npx eslint src --fix",
        "lint": "npx eslint 'src/**/*.js' || true",
        "prettify": "npx prettier --write 'src/**/*.js'"
    },
    "watch": {
        "build-library": {
            "patterns": [
                "src/**/*.js"
            ]
        },
        "build-server": {
            "patterns": [
                "server/**/*.*"
            ]
        }
    },
    "babel": {},
    "keywords": [
        "three",
        "threejs",
        "three.js",
        "particles"
    ],
    "devDependencies": {
        "@babel/core": "7.22.0",
        "@babel/eslint-parser": "7.22.11",
        "@babel/plugin-proposal-class-properties": "7.18.6",
        "@babel/preset-env": "7.22.10",
        "babel-loader": "9.1.3",
        "eslint": "8.47.0",
        "eslint-config-google": "0.14.0",
        "file-loader": "6.2.0",
        "prettier": "3.0.2",
        "prettier-eslint": "15.0.1",
        "url-loader": "4.1.1"
    },
    "dependencies": {
        "http-server": "14.1.1",
        "install": "0.13.0",
        "npm-watch": "0.11.0",
        "rollup": "3.28.1",
        "three": "0.155.0"
    }
}
